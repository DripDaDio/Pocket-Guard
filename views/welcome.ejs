      <article class="member">
        <div class="avatar" aria-hidden="true">KA</div>
        <div class="meta">
          <strong>Kush Ahuja</strong>
          <div class="muted">Backend</div>
        </div>
      </article>
      <article class="member">
        <div class="avatar" aria-hidden="true">SC</div>
        <div class="meta">
          <strong>Suryansh Chuadhary</strong>
          <div class="muted">Marketing</div>
        </div>
      </article>
    </div>
  </section>
  
</main>
